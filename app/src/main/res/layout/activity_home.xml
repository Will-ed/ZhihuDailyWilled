<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.ed.will.zhihudailywilled.view.SuperViewPager
        android:id="@+id/home_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </com.ed.will.zhihudailywilled.view.SuperViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@android:color/darker_gray"/>

    <RadioGroup
        android:id="@+id/rg_foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >

        <RadioButton
            android:id="@+id/rb_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/home_homepage_selector"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/text_color_selector" />

        <RadioButton
            android:id="@+id/rb_dis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/home_follow_selector"
            android:gravity="center"
            android:text="关注"
            android:textColor="@drawable/text_color_selector" />

        <RadioButton
            android:id="@+id/rb_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/home_mine_selector"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/text_color_selector" />

    </RadioGroup>



</LinearLayout>
